# Server Configuration
NODE_ENV=development
PORT=8080

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/autostock_db

# Authentication
JWT_SECRET=your-super-secret-jwt-signing-key-minimum-32-characters

# External APIs (Optional)
OPENAI_API_KEY=your-openai-api-key-here
PINECONE_API_KEY=your-pinecone-api-key-here

# File Storage (Optional)
S3_BUCKET=your-s3-bucket-name
S3_REGION=us-west-2
S3_KEY=your-s3-access-key
S3_SECRET=your-s3-secret-key

# Webhooks (Optional)
WEBHOOK_TOKEN=your-webhook-verification-token

# CORS Configuration (Optional)
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# CAPTCHA (Optional)
CAPTCHA_PROVIDER=none
HCAPTCHA_SECRET=your-hcaptcha-secret-key
RECAPTCHA_SECRET=your-recaptcha-secret-key
